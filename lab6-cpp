#include <iostream>

using namespace std;

int main() {
  // Объявление переменных
  double V, S, U, T, t1, t2;

  // Получение входных данных от пользователя
  cout << "Введите скорость лодки (V) в м/с: ";
  cin >> V;

  cout << "Введите расстояние между точками (S) в метрах: ";
  cin >> S;

  cout << "Введите скорость течения реки (U) в м/с: ";
  cin >> U;

  // Проверка входных данных
  if (V <= U) {
    cout << "Ошибка: Скорость лодки должна быть больше скорости течения." << endl;
    return 1; // Выход с кодом ошибки
  }

  // Вычисление времени движения по течению (t1)
  t1 = S / (V + U);

  // Вычисление времени движения против течения (t2)
  t2 = S / (V - U);

  // Вычисление общего времени (T)
  T = t1 + t2;

  // Вывод результата
  cout << "Общее время (T) для лодки, чтобы добраться до точки B и обратно, составляет: "
       << T << " секунд" << endl;

  return 0;
}
