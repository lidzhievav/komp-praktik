import math

def main():
    omega = float(input("Введите частоту колебаний (omega): "))
    k = float(input("Введите коэффициент (k): "))

    # Проверка корректности ввода k
    if k <= 0:
        print("Ошибка: k должно быть больше 0.")
        return 1  # Возвращаем код ошибки

    # Вычисление phi0 (начальной фазы)
    phi0 = math.asin(1.0 / k)

    # Вычисление T (момента максимального отклонения)
    T = (math.pi / 2 - phi0) / omega

    # Вывод результатов
    print(f"Начальная фаза (phi0): {phi0:.2f} радиан")
    print(f"Момент максимального отклонения (T): {T:.2f} секунд")

if __name__ == "__main__":
    main()
