def main():
  """
  Вычисляет средние скорости мотоциклиста, едущего из пункта A в пункт B и обратно.
  """

  try:
    # Получение входных данных от пользователя
    V = float(input("Введите среднюю скорость (V) в м/с: "))
    S = float(input("Введите расстояние между точками (S) в метрах: "))
    t = float(input("Введите время (t) из A в B в секундах: "))

    # Вычисление V1 (скорость из A в B)
    V1 = S / t

    # Вычисление V2 (скорость из B в A)
    V2 = S / ((2 * S / V) - t)

    # Вывод результатов
    print(f"Средняя скорость из A в B (V1) равна: {V1:.2f} м/с")  # Форматирование до 2 знаков после запятой
    print(f"Средняя скорость из B в A (V2) равна: {V2:.2f} м/с")

  except ValueError:
    print("Некорректный ввод. Пожалуйста, введите числовые значения.")
  except ZeroDivisionError:
    print("Ошибка деления на ноль. Значение 2*S/V не может быть равно t")

if __name__ == "__main__":
  main()
