#include <iostream>
#include <iomanip>

using namespace std;

int main() {
    // Константы
    const double G = 6.672e-11;  // Гравитационная постоянная
    const double M = 5.96e24;    // Масса Земли
    const double R = 6.37e6;    // Радиус Земли

    double h; // Высота над поверхностью Земли
    double g; // Ускорение свободного падения

    // Ввод данных
    cout << "Введите высоту над поверхностью Земли (в метрах): ";
    cin >> h;

    // Расчет ускорения свободного падения
    g = G * M / pow(R + h, 2);

    // Вывод результата
    cout << fixed << setprecision(4); // Устанавливаем точность вывода
    cout << "Ускорение свободного падения на высоте " << h << " метров: " << g << " м/с^2" << endl;

    return 0;
}
