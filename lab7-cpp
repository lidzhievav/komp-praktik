#include <iostream>

using namespace std;

int main() {
  // Объявление переменных
  double V, S, t, V1, V2;

  // Получение входных данных от пользователя
  cout << "Введите среднюю скорость (V) в м/с: ";
  cin >> V;

  cout << "Введите расстояние между точками (S) в метрах: ";
  cin >> S;

  cout << "Введите время (t) от A до B в секундах: ";
  cin >> t;

    // Вычисление V1
    V1 = S / t;

    // Вычисление V2
    V2 = S / ((2 * S / V) - t);

    // Вывод результатов
    cout << "Средняя скорость из A в B (V1) равна: " << V1 << " м/с" << endl;
    cout << "Средняя скорость из B в A (V2) равна: " << V2 << " м/с" << endl;

  return 0;
}
